{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "quotes": [2, "single", "avoid-escape"]
    },
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ]
}